{
  "name": "express-mongograph",
  "version": "1.0.0",
  "description": "project use for server express using mongodb, graphql",
  "main": "src/index.js",
  "scripts": {
    "start": "cross-env NODE_ENV=development webpack --config webpack/webpack.dev.js --color -p --progress",
    "build": "webpack --config webpack/webpack.prod.js --color -p --progress --release --verbose --hide-modules --display-optimization-bailout",
    "build:clean": "rimraf ./build",
    "heroku-postbuild": "npm run build",
    "lint": "npm run lint:js",
    "lint:eslint": "standard --verbose | snazzy '**/*.js' '**/*.*.js'",
    "lint:eslint:fix": "standard '**/*.js' '**/*.*.js' --fix --verbose | snazzy",
    "lint:js": "npm run lint:eslint -- . ",
    "lint:staged": "lint-staged",
    "prebuild": "npm run build:clean",
    "start:prod": "node build/main.js",
    "start-docker": "bash start-docker.sh",
    "test": "cross-env NODE_ENV=test mocha-webpack --timeout 60000 --webpack-config webpack/webpack.test.js \"src /**/*.js\" \"test /**/*.js\" \"test/**/*.test.js\"  \"src/**/*.test.js\"",
    "coverage": "cross-env NODE_ENV=test nyc --reporter=lcov --reporter=text npm run test"
  },
  "keywords": [
    "mongo",
    "express",
    "mongoose",
    "graphql",
    "appollo"
  ],
  "author": "tuevu",
  "license": "MIT",
  "dependencies": {
    "@babel/runtime": "^7.4.5",
    "apollo-server-express": "^2.5.0",
    "bcrypt": "^3.0.6",
    "express": "^4.17.0",
    "graphql": "^14.3.1",
    "jsonwebtoken": "^8.5.1",
    "lodash": "^4.17.11",
    "mongoose": "^5.5.11",
    "sift": "^8.3.3"
  },
  "devDependencies": {
    "@babel/core": "^7.4.5",
    "@babel/plugin-transform-runtime": "^7.4.4",
    "@babel/preset-env": "^7.4.5",
    "@babel/runtime": "^7.4.5",
    "babel-loader": "^8.0.6",
    "chai": "^4.2.0",
    "circular-dependency-plugin": "^5.0.2",
    "clean-webpack-plugin": "^2.0.2",
    "compression-webpack-plugin": "^2.0.0",
    "cross-env": "^5.2.0",
    "dotenv-webpack": "^1.7.0",
    "graphql-tag": "^2.10.1",
    "husky": "^2.3.0",
    "istanbul-instrumenter-loader": "^3.0.1",
    "lint-staged": "^8.1.7",
    "mocha": "^6.1.4",
    "mocha-webpack": "2.0.0-beta.0",
    "mongodb-memory-server": "^5.1.2",
    "nock": "^10.0.6",
    "nyc": "^14.1.1",
    "rimraf": "^2.6.3",
    "snazzy": "^8.0.0",
    "standard": "^12.0.1",
    "start-server-webpack-plugin": "^2.2.5",
    "supertest": "^4.0.2",
    "terser-webpack-plugin": "^1.3.0",
    "webpack": "^4.32.2",
    "webpack-cli": "^3.3.2",
    "webpack-node-externals": "^1.7.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "yarn lint && yarn test"
    }
  },
  "lint-staged": {
    "ignore": [
      "package.json"
    ],
    "linters": {
      "*.js": [
        "npm run lint:eslint:fix",
        "git add --force"
      ],
      "*.json": [
        "prettier --write",
        "git add --force"
      ]
    }
  },
  "standard": {
    "env": {
      "mocha": true
    },
    "rules": {
      "no-unused-expressions": "off"
    }
  },
  "nyc": {
    "include": [
      "src/**/*.js"
    ],
    "instrument": false,
    "sourceMap": false
  }
}
